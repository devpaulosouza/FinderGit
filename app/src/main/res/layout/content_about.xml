<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.vinicius.findergit.about.AboutActivity"
    tools:showIn="@layout/activity_about">

    <TextView
        android:id="@+id/tv_kawaii"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/iv_kawaii"
        android:text="@string/text_kawaii"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:textAlignment="center"
        android:textColor="#ff9999"
        android:textSize="24sp"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/iv_kawaii"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/kawaii"
        android:contentDescription="@string/kawaii"
        android:visibility="gone"/>

</RelativeLayout>
